{
  "$schema": "http://www.krakend.io/schema/v3.json",
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": true,
      "stdout": true,
      "format": "custom",
      "custom_format": "%{message}"}
    },
  "output_encoding": "json",
  "name": "FrontOfficeAPI",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/NewOrder/{product_id}/{amount}/{order_quantity}",
      "method": "GET",
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/payment/{amount}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://payment_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        },
        {
          "url_pattern": "/inventory/{product_id}/{order_quantity}",
          "encoding": "json",
          "method": "PUT",
          "host": [
            "http://inventory_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
