{
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": true,
      "stdout": true,
      "format": "custom",
      "custom_format": "%{message}"}
    },
  "output_encoding": "json",
  "name": "FrontOfficeAPI",
  "port": 8081,
  "endpoints": [
    {
      "endpoint": "/NewOrder/{amount}",
      "method": "GET",
      "extra_config": {
        "proxy": {
          "sequential": true
        }
      },
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/payment/{amount}",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://payment_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        },
        {
          "host": [
            "gcppubsub://"
          ],
          "disable_host_sanitize": true,
          "extra_config": {
            "backend/pubsub/publisher": {
              "topic_url": "projects/group-6-344214/topics/new_order"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/GetMenu",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/inventory/menu",
          "encoding": "json",
          "method": "GET",
          "host": [
            "http://inventory_direct_service_ct:5000/"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/fulfilled_order",
      "method": "POST",
      "output_encoding": "json",
      "backend": [
        {
          "host": [
            "gcppubsub://"
          ],
          "disable_host_sanitize": true,
          "extra_config": {
            "backend/pubsub/publisher": {
              "topic_url": "projects/group-6-344214/topics/fulfilled_orders"
            }
          }
        }
      ]
    },
    {
      "endpoint": "/unfulfilled_order",
      "method": "GET",
      "output_encoding": "json",
      "backend": [
        {
          "host": [
            "gcppubsub://"
          ],
          "disable_host_sanitize": true,
          "extra_config": {
            "backend/pubsub/subscriber": {
              "subscription_url": "group-6-344214/topics/unfulfilled_orders"
            }
          }
        }
      ],
      "extra_config": {
        "proxy": {
          "static": {
            "strategy": "incomplete",
            "data": {
              "message": "No Orders available yet. Try later"
            }
          }
        }
      }
    }
  ]
}
